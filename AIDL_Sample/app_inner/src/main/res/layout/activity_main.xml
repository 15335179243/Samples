<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eyecool.visitor.sysinner.MainActivity">

    <Button
        android:id="@+id/bt_main_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/down_cross_back_selector" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="174dp"
        android:layout_marginRight="174dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_corner_blue_light">

        <TextView
            android:id="@+id/tv_mainPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="64dp"
            android:text="北京大学-智能访客登记"
            android:textColor="@color/colorWhite"
            android:textSize="36sp" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="54dp"
            android:layout_marginTop="64dp"
            android:format24Hour="yyyy年MM月dd日 aa h:mm"
            android:textColor="@color/colorBlue4"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_warm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/layer_white"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp"
            android:text="请提示来访者将身份证放入读卡区"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/bt_main_authenticate"
                style="@style/mian_page_button_style1"
                android:layout_marginRight="86dp"
                android:layout_weight="1"
                android:text="认证"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt_mian_query"
                style="@style/mian_page_button_style"
                android:layout_marginRight="46dp"
                android:layout_weight="1"
                android:text="查询"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt_main_setting"
                style="@style/mian_page_button_style"
                android:layout_marginRight="46dp"
                android:layout_weight="1"
                android:text="设置"
                android:textSize="34sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="山东眼神智能科技提供技术支持"
        android:textColor="@color/colorGrey2"
        android:textSize="20sp" />
</RelativeLayout>
