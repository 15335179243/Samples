<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sys_setting"
        android:textColor="#2b2b2b"
        android:textSize="@dimen/setting_tv_sys_setting_size"
        android:textStyle="bold" />
    <!--服务器 ip-->
    <LinearLayout

        android:layout_centerHorizontal="true"
        style="@style/ll_setting_style"
        android:layout_marginTop="@dimen/setting_ll_server_ip_margin_top">


        <EditText
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:id="@+id/et_server_ip_address"
            style="@style/et_setting_style"
            android:layout_width="@dimen/setting_et_server_ip_width"
            android:hint="@string/server_ip"
            />

        <include layout="@layout/setting_bottom_row_grey8" />

    </LinearLayout>
    <!--日期时间-->
    <LinearLayout
        android:layout_centerHorizontal="true"
        style="@style/ll_setting_style"
        android:layout_marginTop="@dimen/setting_ll_date_time_margin_top">


        <TextClock
            android:layout_marginStart="20dp"
            style="@style/clockStyle"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorGrey1" />
        <include layout="@layout/setting_bottom_row_grey9" />

    </LinearLayout>
    <!--算法授权-->
    <LinearLayout
        android:layout_centerHorizontal="true"
        style="@style/ll_setting_style"
        android:layout_marginTop="@dimen/setting_ll_algorithm_authorize_margin_top">


        <TextView
            android:layout_marginLeft="20dp"
            style="@style/et_setting_style"
            android:layout_width="@dimen/setting_tv_et_algorithm_authorize_file_width"
            android:text="授权文件" />
        <include layout="@layout/setting_bottom_row_grey9" />

    </LinearLayout>
    <!--软件版本-->
    <LinearLayout
        android:layout_centerHorizontal="true"
        style="@style/ll_setting_style"
        android:layout_marginTop="@dimen/setting_ll_software_verison_margin_top">


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_software_version"
            style="@style/et_setting_style"
            android:layout_width="wrap_content"
            android:text="1.0"
            android:textColor="@color/colorGrey1" />
        <include layout="@layout/setting_bottom_row_grey8" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_setting_cancle"
        style="@style/bt_setting_style"
        android:layout_marginRight="@dimen/setting_bt_save_margin_right"

        android:background="@drawable/down_grey10_grey9_selector"
        android:text="@string/bt_cancle" />

    <Button
        android:id="@+id/bt_setting_save"
        style="@style/bt_setting_style"
        android:background="@drawable/down_blue6_blue2_selector"
        android:layout_marginRight="@dimen/setting_bt_cancle_margin_right"
        android:text="@string/bt_save" />

    <TextView
        android:text="山东眼神智能科技提供技术支持"
        android:textSize="28sp"
        android:textColor="@color/colorGrey2"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>